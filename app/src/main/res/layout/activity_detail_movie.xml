<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activity_detail_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.android.fernass.mymovies.GUI.DetailMovie">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_detail_movie_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tv_detail_movie_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_detail_movie_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_Overview"
            android:text="@string/detail_overview"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/iv_detail_movie_image"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_overview"
            android:layout_alignTop="@id/tv_detail_Overview"
            android:layout_toRightOf="@id/tv_detail_Overview" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_detail_overview"
            android:layout_alignLeft="@id/tv_detail_overview"
            android:id="@+id/tv_detail_rating"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_rating"
            android:id="@+id/tv_detail_Rating"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/tv_detail_rating"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_release_date"
            android:id="@+id/tv_detail_Release_date"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_detail_Rating"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_detail_Release_date"
            android:layout_alignLeft="@id/tv_detail_overview"
            android:id="@+id/tv_detail_release_date"/>

    </RelativeLayout>

</ScrollView>